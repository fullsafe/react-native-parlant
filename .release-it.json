{
  "git": {
    "commitMessage": "Release v${version}",
    "tag": true,
    "push": true,
    "requireBranch": "main"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": [
      "npm run clean",
      "npm run build"
    ],
    "after:bump": "npm run build",
    "before:git:release": "git add dist/"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  }
}